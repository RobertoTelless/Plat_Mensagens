@using Presentation.Extensions
@using CrossCutting;
@using EntitiesServices.Work_Classes;
@model EntitiesServices.Model.CRM
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">

    <div class="page-title">
        <h3 class="title">Processos - CRM</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li class="active">
                <strong>Processos - CRM</strong>
            </li>
        </ol>
        <br />
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Filtros</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                @using (Html.BeginForm("FiltrarCRM", "CRM", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="ibox-content">
                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Visualização
                                @Html.DropDownListFor(m => m.CRM1_IN_ESTRELA, (SelectList)ViewBag.Visao, "Selecionar", new { @class = "form-control", autofocus = true })
                            </div>
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Status
                                @Html.DropDownListFor(m => m.CRM1_IN_STATUS, (SelectList)ViewBag.Status, "Selecionar", new { @class = "form-control", autofocus = true })
                            </div>
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Data Início
                                @Html.TextBoxFor(m => m.CRM1_DT_CRIACAO, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true, @id="data1" })
                            </div>
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Data Final
                                @Html.TextBoxFor(m => m.CRM1_DT_CANCELAMENTO, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true, @id="data2" })
                            </div>
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Origem
                                @Html.DropDownListFor(m => m.ORIG_CD_ID, (SelectList)ViewBag.Origem, "Selecionar", new { @class = "form-control", autofocus = true })
                            </div>
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Situação
                                @Html.DropDownListFor(m => m.CRM1_IN_ATIVO, (SelectList)ViewBag.Adic, "Selecionar", new { @class = "form-control", autofocus = true })
                            </div>
                        </div>
                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                            <div class="col-lg-3 col-md-3 col-xs-12">
                                Nome do Processo
                                @Html.TextBoxFor(m => m.CRM1_NM_NOME, new { @class = "form-control", autofocus = true })
                            </div>
                            <div class="col-lg-4 col-md-4 col-xs-12">
                                Cliente (Nome, Razão Social ou CPF)
                                @Html.TextBoxFor(m => m.CRM1_DS_DESCRICAO, new { @class = "form-control", autofocus = true })
                            </div>
                            <div class="col-lg-5 col-md-5 col-xs-12">
                                @Html.ButtonActionSubmit(text: "Filtrar")
                                @Html.ButtonLinkIndex(text: "Retirar Filtro", controller: "CRM", action: "RetirarFiltroCRM")
                                @Html.ButtonLinkIndex(text: "Novo Processo", controller: "CRM", action: "IncluirCRM")
                                @Html.ButtonLinkIndex(text: "Gerar Relatório", controller: "CRM", action: "GerarRelatorioListaCRM")
                                @Html.ButtonLinkIndex(text: "Dashboard", controller: "CRM", action: "Voltar")
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Processos - CRM</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="row">
                        @if (ViewBag.Listas != null && (ViewBag.Listas as List<EntitiesServices.Model.CRM>).Count > 0)
                        {
                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead style="background-color:lightsteelblue">
                                    <tr>
                                        <th></th>
                                        <th style="width: auto">Cliente</th>
                                        <th style="width: auto">Título</th>
                                        <th style="width: auto">Status</th>
                                        <th style="width: auto">Próxima Ação</th>
                                        <th style="width: auto">Data Prevista</th>
                                        <th style="width: auto">Origem</th>
                                        <th style="width: auto">Situação</th>
                                        <th class="td-one-action">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cond in (ViewBag.Listas as List<EntitiesServices.Model.CRM>))
                                    {
                                        <tr>
                                            
                                            @if (cond.CRM1_IN_ESTRELA == 1)
	                                        {
                                                <td><span class="badge badge-warning">Prospecção</span></td>
                                            }
                                            else if (cond.CRM1_IN_ESTRELA == 2)
                                            {
                                                <td><span class="badge badge-warning">Oportunidade</span></td>
                                            }
                                            <td>@cond.CLIENTE.CLIE_NM_NOME</td>








                                            @if (cond.CLIE_IN_STATUS == 1)
	                                        {
                                                <td><span class="badge badge-warning">Prospecção</span></td>
                                            }
                                            else if (cond.CLIE_IN_STATUS == 2)
                                            {
                                                <td><span class="badge badge-warning">Oportunidade</span></td>
                                            }
                                            else if (cond.CLIE_IN_STATUS == 3)
                                            {
                                                <td><span class="badge badge-primary">Proposta</span></td>
                                            }
                                            else if (cond.CLIE_IN_STATUS == 4)
                                            {
                                                <td><span class="badge badge-success">Engajado</span></td>
                                            }
                                            else if (cond.CLIE_IN_STATUS == 5)
                                            {
                                                <td><span class="badge badge-danger">Descartado</span></td>
                                            }
                                            else if (cond.CLIE_IN_STATUS == 6)
                                            {
                                                <td><span class="badge badge-warning-light">Suspenso</span></td>
                                            }
                                            <td style="width: auto">@cond.CLIE_NR_CPF</td>
                                            <td style="width: auto">@cond.CLIE_NR_CNPJ</td>
                                            <td style="width: auto">@cond.CLIE_NM_EMAIL</td>
                                            <td style="width: auto">@cond.CLIE_NR_CELULAR</td>
                                            <td style="width: auto">@cond.CLIE_NR_WHATSAPP</td>
                                            <td style="width: auto">@cond.CLIE_NM_CIDADE</td>
                                            @if (cond.UF != null)
                                            {
                                                <td style="width: auto">@cond.UF.UF_SG_SIGLA</td>
                                            }
                                            else
                                            {
                                                <td style="width: auto">-</td>
                                            }
                                            @if (!String.IsNullOrEmpty(cond.CLIE_AQ_FOTO))
                                            {
                                                <td><img src="@Url.Content(cond.CLIE_AQ_FOTO)" style="width: auto; height: auto; max-height: 55px; max-width: 45px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@cond.CLIE_NM_NOME', '@Url.Content(cond.CLIE_AQ_FOTO)')"></td>
                                            }
                                            else
                                            {
                                                <td><img src="~/Images/a8.jpg" style="width: auto; height: auto; max-height: 55px; max-width: 45px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@cond.CLIE_NM_NOME', '/Images/a8.jpg')"></td>
                                            }
                                            <td class="td-one-action">
                                                @if (ViewBag.Perfil == "ADM" || ViewBag.Perfil == "GER" )
                                                {
                                                    @Html.TableLinkDetails(cond.CLIE_CD_ID, "EditarCliente", "fa-edit", "Editar/Consultar")
                                                    @*<span style="cursor: pointer; color: #337ab7;" class="fa fa-send" onclick="MudaIdCliente('@cond.CLIE_CD_ID')" data-toggle="modal" data-target="#exampleModal" title="Enviar SMS"> </span>*@
                                                    if (cond.CLIE_IN_ATIVO == 1)
                                                    {
                                                        @Html.TableLinkDetails(cond.CLIE_CD_ID, "ExcluirCliente", "fa-trash-o", "Desativar")
                                                    }
                                                    else
                                                    {
                                                        @Html.TableLinkDetails(cond.CLIE_CD_ID, "ReativarCliente", "fa-refresh", "Reativar")
                                                    }
                                                }
                                                else
                                                {
                                                    @Html.TableLinkDetails(cond.CLIE_CD_ID, "VerCliente", "fa-search", "Editar/Consultar")
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-xs-2">

                                </div>
                                <div style="border: 5px solid #F6A54A; padding: 10px; border-radius: 8px 8px; " class="col-lg-4 col-md-4 col-xs-8">
                                    <h2 style="font-weight: bold">Sua pesquisa não retornou nenhum resultado</h2>
                                    <p>Tente outras opções de pesquisa</p>

                                    @Html.ButtonLinkIndex(text: "Retirar Filtro", controller: "Cliente", action: "RetirarFiltroCliente")
                                </div>
                                <div class="col-lg-4 col-md-4 col-xs-2">

                                </div>
                            </div>
                        }
                </div>
                </div>
            </div>
        </div>
    </div>
</div>

