                                                    <h5>Informações do Processo</h5>
                                                    @if (Model.CRM1_IN_ATIVO == 1)
                                                    {
                                                        <span class="badge badge-primary" style="float:right">Ativo</span> 
                                                    }
                                                    @if (Model.CRM1_IN_ATIVO == 2)
                                                    {
                                                        <span class="badge badge-warning" style="float:right">Arquivado</span>                                                        
