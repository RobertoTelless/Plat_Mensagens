@using Presentation.Extensions
@model EntitiesServices.Model.PLANO
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title">
        <h3 class="title">Consumo do Assinante</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li class="active">
                <strong>Consumo do Assinante</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Consumo do Assinante</h5>
                </div>
                <div class="ibox-content">
                    <div class="tabs-container">
                        @using (Html.BeginForm("MontarTelaResumoMensagem", "Plano", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                        {

                            <ul class="nav nav-tabs">
                                <li class="active"><a data-toggle="tab" href="#tab-1">Dados do Plano</a></li>
                            </ul>

                            <div class="tab-content">
                                @*Consumo do Assinante*@
                                <div id="tab-1" class="tab-pane active">
                                    <div class="panel-body">
                                        <div class="form-group">
                                            @Html.ButtonLinkIndex(text: "Dashboard", action: "Voltar", controller: "Plano")
                                        </div>
                                        <div class="row">
                                            <h5 style="color:green; font-weight:bold">Consumo dos Limites de Registros</h5>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Usuários (Atual/Limite)
                                                    @Html.TextBox("txtUsu", (String)ViewBag.Usuarios, new { @class = "form-control", autofocus = true, @readonly="readonly",  @style = "font-weight:bold" } )                                              
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Contatos (Atual/Limite)
                                                    @Html.TextBox("txtCont", (String)ViewBag.Contatos, new { @class = "form-control", autofocus = true, @readonly="readonly",  @style = "font-weight:bold" } )                                              
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Processos (Atual/Limite)
                                                    @Html.TextBox("txtProc", (String)ViewBag.Processos, new { @class = "form-control", autofocus = true, @readonly="readonly",  @style = "font-weight:bold" } )                                              
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Ações (Atual/Limite)
                                                    @Html.TextBox("txtAcoes", (String)ViewBag.Acoes, new { @class = "form-control", autofocus = true, @readonly="readonly",  @style = "font-weight:bold" } )                                              
                                                </div>
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="row">
                                            <h5 style="color:green; font-weight:bold">Consumo dos Limites de Mensagens (No Mês Corrente)</h5>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    E-Mails (Atual/Limite)
                                                    @Html.TextBox("txtUsu1", (String)ViewBag.EmailsMes, new { @class = "form-control", autofocus = true, @readonly="readonly",  @style = "font-weight:bold" } )                                              
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    SMS (Atual/Limite)
                                                    @Html.TextBox("txtCont1", (String)ViewBag.SMSMes, new { @class = "form-control", autofocus = true, @readonly="readonly",  @style = "font-weight:bold" } )                                              
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    WhatsApp (Atual/Limite)
                                                    @Html.TextBox("txtProc1", (String)ViewBag.WhatsAppMes, new { @class = "form-control", autofocus = true, @readonly="readonly",  @style = "font-weight:bold" } )                                              
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Falhas no Mês
                                                    @Html.TextBox("txtProc1", (String)ViewBag.FalhasMes, new { @class = "form-control", autofocus = true, @readonly="readonly",  @style = "font-weight:bold" } )                                              
                                                </div>
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="row">
                                            <h5 style="color:green; font-weight:bold">Consumo dos Limites de Mensagens Acumulado</h5>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    E-Mails
                                                    @Html.TextBox("txtUsu2", (String)ViewBag.Emails, new { @class = "form-control", autofocus = true, @readonly="readonly",  @style = "font-weight:bold" } )                                              
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    SMS 
                                                    @Html.TextBox("txtCont2", (String)ViewBag.SMS, new { @class = "form-control", autofocus = true, @readonly="readonly",  @style = "font-weight:bold" } )                                              
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    WhatsApp
                                                    @Html.TextBox("txtProc2", (String)ViewBag.WhatsApp, new { @class = "form-control", autofocus = true, @readonly="readonly",  @style = "font-weight:bold" } )                                              
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Falhas no Mês
                                                    @Html.TextBox("txtProc2", (String)ViewBag.Falhas, new { @class = "form-control", autofocus = true, @readonly="readonly",  @style = "font-weight:bold" } )                                              
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.ButtonLinkIndex(text: "Dashboard", action: "Voltar", controller: "PLano")
                                        </div>
                                    </div>
                                </div>

                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

